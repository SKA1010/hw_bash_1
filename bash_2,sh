#! /bin/bash
read -p "Введите первое число: " first_number
read -p "Введите второе число: " second_number
if [ $first_number -gt $second_number ]
    then echo $((first_number - second_number))
elif [ $first_number -lt $second_number ]
    then echo $((second_number - first_number))
else echo $((second_number*first_number))
fi
